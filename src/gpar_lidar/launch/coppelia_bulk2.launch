<?xml version="1.0"?>
<launch>


		<node pkg="gpar_lidar" type="lasertopc2" name="lasertopc2_top1" output="screen" >
				<param name="angle_bound" type="double" value="0" />
				<param name="scan_topic" type="string" value="laser_scan_top1" />
				<param name="output_cloud" type="string" value="cloud_top1" />
				<param name="cloud_frame" type="string" value="lidar_top1" />
		</node>

		<node pkg="gpar_lidar" type="lasertopc2" name="lasertopc2_top2" output="screen" >
				<param name="angle_bound" type="double" value="0" />
				<param name="scan_topic" type="string" value="laser_scan_top2" />
				<param name="output_cloud" type="string" value="cloud_top2" />
				<param name="cloud_frame" type="string" value="lidar_top2" />
		</node>
				 
		<node pkg="gpar_lidar" type="lasertopc2" name="lasertopc2_front" output="screen" >
				<param name="angle_bound" type="double" value="0" />
				<param name="scan_topic" type="string" value="laser_scan_front" />
				<param name="output_cloud" type="string" value="cloud_front" />
				<param name="cloud_frame" type="string" value="lidar_front" />
		</node>

		<node pkg="gpar_lidar" type="bulk_scan2" name="bulk_scan2" output="screen" >
				<param name="x_min" value="0.7" />
				<param name="x_max" value="1.7" />
		</node>


		<node pkg="rviz" type="rviz" name="rviz" args="-d $(find gpar_lidar)/rviz/coppelia_bulk2.rviz"  />

				<node pkg="tf2_ros" type="static_transform_publisher" name="lidar_map" args="0 0 0 0 0 0 map lidar_front" /> 

				<param name="robot_description" textfile="$(find gpar_lidar)/urdf/bulk_dual_lidar.xml" />
				<node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" />

		</launch>

