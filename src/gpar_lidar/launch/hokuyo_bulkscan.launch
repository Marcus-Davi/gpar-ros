<?xml version="1.0"?>
<launch>

  <node pkg="tf2_ros" type="static_transform_publisher" name="static_ldmrs_imu_link" args="0 0 2 0 1.57 0 map cloud" />


   <node pkg="gpar_lidar" type="hokuyo_cloud" name="hokuyo_cloud" output="screen" >
   <param name="angle_bound" type="double" value="0" />
   <param name="scan_topic" type="string" value="scan" />
   <param name="input_cloud" type="string" value="cloud" />
   </node>


   <node pkg="urg_node" type="urg_node" name="urg_node" output="screen" >
	   <param name="serial_port" type="string" value="/dev/ttyACM0" />
<!--	<remap from="scan" to ="base_scan" />  -->
   </node>

<!-- Scan to Scan Filter
	<node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter" >
	<rosparam command="load" file="$(find gpar_lidar)/config/angle_filter.yaml" />
	<remap from="scan" to ="base_scan" /> 
	<remap from="scan_filtered" to="scan" />
	</node> -->

	<node pkg="gpar_lidar" type="bulk_scan" name="bulk_scan" output="screen" >
	<param name="input_cloud" type="string" value="cloud" />
	</node>

      <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find gpar_lidar)/rviz/hokuyo_bulk.rviz" /> 

</launch>

